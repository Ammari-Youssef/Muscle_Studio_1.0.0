<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context=".Coach5Activity">

    <ImageView
        android:id="@+id/C1imageView"
        android:layout_width="wrap_content"
        android:layout_height="308dp"
        android:layout_gravity="center"
        android:layout_weight="50"

        android:src="@drawable/coach5" />

    <TextView
        android:id="@+id/coachName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:text="@string/coach5"
        style="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/C1imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Title"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="Description : "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/desc_coach5"
        android:textStyle="bold"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:paddingTop="20dp"/>

    <Button
        android:id="@+id/HireC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"

        android:background="@drawable/btn_bg"

        android:text="Hire"
        android:textAllCaps="false" />
</LinearLayout>